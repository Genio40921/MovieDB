<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dip"
    style="@style/Widget.Material3.CardView.Outlined"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dip">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="120dp"
            style="@style/Widget.Material3.CardView.Elevated"
            card_view:cardCornerRadius="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/categoryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/watching"
                    android:textColor="@android:color/white"
                    android:background="#99000000"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="8dp"/>
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@id/title"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dip"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:maxLines="2" />


            <RelativeLayout
                android:id="@+id/episodeCountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/episodeCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/episodes"/>

            <TextView
                android:id="@+id/episodeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/episodeCountLabel"
                android:text="12"
                android:textSize="12sp"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="13-02-2008"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/episodeCount"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:textSize="11sp"/>
            </RelativeLayout>

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/episodeCountLayout"
                android:layout_marginBottom="2dip"
                android:numStars="5"
                android:rating="3.5" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

